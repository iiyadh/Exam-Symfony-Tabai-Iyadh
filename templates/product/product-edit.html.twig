{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
<div class="mb-4">
    <h2><i class="fas fa-edit"></i> Edit Product</h2>
</div>

<div class="card p-4">
    <form method="post" action="{{ path('product_edit', {id: product.id}) }}">
        <div class="mb-3">
            <label for="name" class="form-label">Product Name</label>
            <input name="name" id="name" type="text" class="form-control" value="{{ product.name }}" required>
        </div>

        <div class="mb-3">
            <label for="price" class="form-label">Price (USD)</label>
            <input name="price" id="price" type="number" step="0.01" class="form-control" value="{{ product.price }}" required>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="description" id="description" class="form-control" rows="3">{{ product.description }}</textarea>
        </div>

        <div class="mb-3">
            <label for="image_url" class="form-label">Image URL</label>
            <input name="image_url" id="image_url" type="url" class="form-control" value="{{ product.imageUrl }}">
        </div>

        <div class="d-flex justify-content-between">
            <a href="{{ path('product_list') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Cancel
            </a>
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Update
            </button>
        </div>
    </form>
</div>
{% endblock %}
